<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.diary.diary.repository.TodayRepository">

    <select id="viewall" resultType="com.example.diary.diary.entity.Today">
        SELECT
            id,author,content,emotion,date_format(created_date,'%Y-%m-%d %H:%i:%s') created_date
        FROM
            todaydiary

    </select>

    <insert id="save">
        INSERT INTO todaydiary
            (id, author, content, emotion)
        VALUES
            (#{id}, #{author}, #{content}, #{emotion})
    </insert>

    <delete id="delete">
        DELETE FROM todaydiary
        WHERE id=#{id}
    </delete>

    <update id="modify" >
        UPDATE todaydiary
        SET content=#{content},emotion=#{emotion}
        WHERE id=#{id}
    </update>



</mapper>



